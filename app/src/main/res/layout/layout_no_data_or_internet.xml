<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:paddingVertical="8dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv"
            android:layout_width="190dp"
            android:layout_height="178dp"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toEndOf="@id/clLayout"
            app:layout_constraintStart_toStartOf="@id/clLayout"
            app:layout_constraintTop_toTopOf="@id/clLayout" />
        <!--        android:layout_width="237dp"-->
        <!--        android:layout_height="222dp"-->

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:text="@string/Oops_No_Internet_Connection"
            android:textColor="@color/grey_67"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/clLayout"
            app:layout_constraintStart_toStartOf="@id/clLayout"
            app:layout_constraintTop_toBottomOf="@id/iv"
            tools:text="Oops! No Internet Connection" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="42dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="42dp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="@string/Make_sure_your_wifi_or_celullar_data_is_turned_on_and_then_try_again"
            android:textColor="@color/grey_a9"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/clLayout"
            app:layout_constraintStart_toStartOf="@id/clLayout"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            tools:text="Make sure your Wifi or Celullar Data is turned on
and then Try again!" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/cvRetryInternet"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:background="@drawable/yellow_rounded_5dp"
            android:elevation="3dp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="Try Again"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/clLayout"
            app:layout_constraintStart_toStartOf="@id/clLayout"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitle" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>